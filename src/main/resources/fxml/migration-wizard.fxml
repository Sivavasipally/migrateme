<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox styleClass="wizard-header">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label fx:id="stepLabel" styleClass="wizard-step-label" text="Step 1 of 6: Repository Selection" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="wizard-cancel-button" text="Cancel" />
               </children>
            </HBox>
            <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" progress="0.16" styleClass="wizard-progress" />
         </children>
      </VBox>
   </top>
   <center>
      <VBox fx:id="wizardContainer" styleClass="wizard-container">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="wizard-scroll-pane" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="stepContainer" styleClass="wizard-step-container" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox fx:id="navigationContainer" alignment="CENTER_RIGHT" spacing="15.0" styleClass="wizard-navigation">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" mnemonicParsing="false" styleClass="wizard-back-button" text="← Back" />
            <Button fx:id="nextButton" mnemonicParsing="false" styleClass="wizard-next-button" text="Next →" />
            <Button fx:id="finishButton" mnemonicParsing="false" styleClass="wizard-finish-button" text="Finish" visible="false" />
         </children>
      </HBox>
   </bottom>
</BorderPane>