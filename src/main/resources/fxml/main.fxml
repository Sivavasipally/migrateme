<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox spacing="10.0">
         <children>
            <!-- Title -->
            <HBox alignment="CENTER">
               <children>
                  <Label text="Git Repository Migrator" styleClass="title">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- API Configuration -->
            <TitledPane text="Git API Configuration" expanded="true">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Label text="API URL:" minWidth="80.0" />
                              <TextField fx:id="apiUrlField" promptText="https://api.github.com/user/repos" prefWidth="400.0" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Token:" minWidth="80.0" />
                              <PasswordField fx:id="tokenField" promptText="Enter your authentication token" prefWidth="400.0" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="fetchReposButton" text="Fetch Repositories" styleClass="primary-button" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </TitledPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="10.0">
         <children>
            <!-- Repository Selection -->
            <TitledPane text="Repository Selection" expanded="true">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="selectAllButton" text="Select All" />
                              <Button fx:id="selectNoneButton" text="Select None" />
                           </children>
                        </HBox>
                        <TableView fx:id="repositoryTable" prefHeight="300.0">
                           <columns>
                              <TableColumn fx:id="selectColumn" prefWidth="60.0" text="Select" />
                              <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                              <TableColumn fx:id="urlColumn" prefWidth="300.0" text="Clone URL" />
                              <TableColumn fx:id="languageColumn" prefWidth="100.0" text="Language" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="migrateButton" text="Start Migration" styleClass="primary-button" disable="true" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </TitledPane>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <VBox spacing="10.0">
         <children>
            <!-- Progress and Status -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Label text="Status:" />
                  <Label fx:id="statusLabel" text="Ready" />
                  <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
               </children>
            </HBox>
            
            <!-- Log Area -->
            <TitledPane text="Migration Log" expanded="true">
               <content>
                  <ScrollPane fitToWidth="true" prefHeight="200.0">
                     <content>
                        <TextArea fx:id="logArea" editable="false" wrapText="true" promptText="Migration logs will appear here..." />
                     </content>
                  </ScrollPane>
               </content>
            </TitledPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>